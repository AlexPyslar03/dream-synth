<UserControl x:Class="MidiEditor.MidiEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="600" Width="800">
    <Grid>
        <Canvas Name="NoteCanvas" Background="LightGray" MouseLeftButtonDown="NoteCanvas_MouseLeftButtonDown"
                MouseMove="NoteCanvas_MouseMove" MouseLeftButtonUp="NoteCanvas_MouseLeftButtonUp">
            <!-- Здесь будут рисоваться ноты -->
        </Canvas>
        <Slider Name="TempoSlider" Minimum="60" Maximum="180" Value="120" VerticalAlignment="Bottom" />
    </Grid>
</UserControl>